    "start": "node dist/index.js",
    "start:api": "node dist/api-server.js",
    "dev": "ts-node src/index.ts",
    "dev:api": "ts-node src/api-server.ts",
    "build": "tsc",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "bitcoin",
    "wallet",
    "cryptocurrency",
    "blockchain",
    "offline",
    "cold-storage"
