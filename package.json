  "author": "Bitcoin Wallet Developer",
  "license": "MIT",
  "dependencies": {
    "@ethereumjs/util": "^10.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "axios": "^1.6.0",
    "bip32": "^4.0.0",
    "bip39": "^3.1.0",
    "bitcoinjs-lib": "^6.1.5",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "ethereumjs-wallet": "^1.0.2",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "node-fetch": "^3.3.2",
    "readline-sync": "^1.4.10",
