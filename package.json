    "tiny-secp256k1": "^2.2.4",
    "web3": "^4.16.0"
  },
  "devDependencies": {
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.9.0",
    "@types/readline-sync": "^1.4.8",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
