{
  "name": "bitcoin-wallet",
  "version": "1.0.0",
  "description": "Secure Bitcoin wallet with local storage and offline transaction capabilities",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "build": "tsc",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "bitcoin",
    "wallet",
    "cryptocurrency",
    "blockchain",
    "offline",
    "cold-storage"
